        <Button layoutX="492.0" layoutY="400.0" mnemonicParsing="false" onAction="#onBuyItemButtonClick" prefHeight="40.0" prefWidth="125.0" text="Buy Item" textAlignment="CENTER">
            <font>
                <Font name="PT Bold Heading" size="14.0" />
            </font>
        </Button>
