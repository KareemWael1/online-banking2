      <Button layoutX="338.0" layoutY="400.0" mnemonicParsing="false" onAction="#onTransferButtonClick" prefHeight="40.0" prefWidth="125.0" text="Transfer">
         <font>
            <Font name="Dubai Regular" size="14.0" />
         </font>
      </Button>
    </children>
