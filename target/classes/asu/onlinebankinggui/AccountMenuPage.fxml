      <Label fx:id="number" contentDisplay="CENTER" layoutX="216.0" layoutY="249.0" prefHeight="40.0" prefWidth="369.0" style="-fx-font-size: 24;" styleClass="label" stylesheets="@css/main.css" text="Number : Account Number">
